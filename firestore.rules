rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función helper para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Regla para la colección de usuarios
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer su propio documento
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Permitir crear documento solo si el UID coincide con el usuario autenticado
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Permitir actualizar solo su propio documento
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Solo admins pueden eliminar usuarios
      allow delete: if isAdmin();
    }
    
    // Regla para posts del blog
    match /posts/{postId} {
      // LECTURA: Todos pueden leer posts (igual que profile/portfolio)
      allow read: if true;
      
      // ESCRITURA: Solo usuarios autenticados pueden crear posts
      allow create: if isAuthenticated();
      
      // ACTUALIZAR: Solo el autor o admin puede editar
      allow update: if isAuthenticated() && 
        (resource.data.authorId == request.auth.uid || isAdmin());
      
      // ELIMINAR: Solo el autor o admin puede eliminar
      allow delete: if isAuthenticated() && 
        (resource.data.authorId == request.auth.uid || isAdmin());
    }
    
    // Regla para categorías
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Regla para tags
    match /tags/{tagId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Regla para interacciones (likes, comentarios)
    match /interactions/{interactionId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Regla para perfil (About page)
    match /profile/{profileId} {
      allow read: if true; // Todos pueden ver el perfil
      allow write: if isAdmin(); // Solo admin puede modificar
    }
    
    // Regla para portfolio (proyectos)
    match /portfolio/{projectId} {
      allow read: if true; // Todos pueden ver proyectos
      allow write: if isAdmin();
    }
    
    // Regla para configuración del sitio
    match /settings/{settingId} {
      allow read: if true; // Todos pueden leer la configuración
      allow write: if isAdmin();
    }
    
    // Regla para timeline (experiencia, educación, etc.)
    match /timeline/{itemId} {
      allow read: if true; // Todos pueden ver la timeline
      allow write: if isAdmin(); // Solo admin puede modificar
    }
    
    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
